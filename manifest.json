{
	"manifest_version": 2,
  "name": "IPX Coveo at Coveo",
  "short_name": "ipx-coveo-at-coveo",
	"version": "1.34",
	"description": "IPX to access Coveo at Coveo",

	"icons": {
		"16": "images/16.png",
    "48": "images/48.png",
    "128": "images/128.png"

  },
  "web_accessible_resources": [
    "html/o2c.html",
    "html/script.js"
    ]
    ,
	"background": {
		"scripts": ["js/global.js","js/background.js"]
	},
	"browser_action": {
		"default_icon": "/images/icon.png"
	},

	"content_scripts": [{
		"run_at": "document_end",
		"matches": [
			"<all_urls>"
		],
		"js": [
			"/js/global.js","/js/content.js"
		],
		"all_frames": false
  }],
	"permissions": [
    "tabs",
    "*://*/"
	]

}
